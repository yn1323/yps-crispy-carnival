{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["./app/*"],
      "@/src/*": ["./src/*"],
      "@/e2e/*": ["./e2e/*"],
      "@/convex/*": ["./convex/*"]
    }
  },
  "types": ["vitest/globals", "@vitest/browser/providers/playwright"],
  "include": [
    "./cloudflare-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "vitest.config.mts",
    "src/configs/vitest/vitest-setup.ts"
  ],
  "exclude": ["node_modules", ".scaffdog"]

}
